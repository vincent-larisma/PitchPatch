{
  "manifest_version": 3,
  "name": "PitchPatch",
  "version": "1.0",
  "description": "Generate tailored resume PDFs from job descriptions.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/pitchpatch_icon.png",
    "48": "images/pitchpatch_icon.png",
    "128": "images/pitchpatch_icon.png"
  }
}
